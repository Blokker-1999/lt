tid:1 name:iqn.2010-02.be.linux-training:storage.lun1
	sid:5066549618344448 initiator:iqn.1993-08.org.debian:01:8983ed2d770
		cid:0 ip:192.168.1.35 state:active hd:none dd:none
root@debby6:/etc/iet# </screen>
